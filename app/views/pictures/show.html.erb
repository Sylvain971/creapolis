<div class="my_header">
    <li><%= link_to content_tag(:i, nil, class: 'fas fa-chevron-left'), user_profile_path(@picture.user) %>
    </li>
    <div class="header_title">Creapolis</div>
    <li>
    </li>
</div>

<div class="body-container">
  <!-- Container-fluid FIRST beign -->
  <div class="container-fluid">
    <!-- Row content begin -->
    <div class="row content">
      <!-- Class col sm 9 begin -->
      <div class="col-sm-9">

      <!-- Artwork -->
			<br>
      <%= link_to user_profile_path(@picture.user_id) do %>
				<%= image_tag @picture.img_url, class: "img-responsive" %>
			<% end %>
      <br>

      <!-- Description line under the picture -->
      <div class="picture_informations">

        <!-- Avatar + Pseudo -->
        <div class="user_avatar_row_small">

          <div class="publish">
            <%= link_to user_profile_path(@picture.user_id) do %>
              <% if @picture.user.profile_picture.url.nil? %>
              <%= image_tag "default_profile_picture.jpg"%>
              <% else %>
              <%= image_tag @picture.user.profile_picture %>
              <% end %>
            <% end %>

            <span style="padding-top: 5px; min-width: 30vw;">
            Publié par :
              <span style="font-weight: bold;">
              <%= link_to user_profile_path(@picture.user_id) do %>
                <%= @picture.user.pseudo %>
              <% end %>
              </span>
            </span>

          </div>
        </div>

        <!-- Buttons begin -->
        <div class="btn-group">
            <% if current_user.voted_for? @picture %>
                <%= link_to unlike_picture_path(@picture), method: :put, class: "btn btn-default" do %>
                <i class="fas fa-heart" style="color:#09125A"></i>
                <%= @picture.get_upvotes.size %>
                <% end %>
            <% else %>
                <%= link_to like_picture_path(@picture), method: :put, class: "btn btn-default" do %>
                <i class="far fa-heart"></i>
                <%= @picture.get_upvotes.size %>
                <% end %>
            <% end %>
        </div>
        <!-- Button end -->

        <div class="col-sm-12">
          <%= link_to "+ de détails sur l'oeuvre", artwork_path(@picture.artwork_id) %>
        </div>

      </div>
      <!-- Description line under the picture -->

      </div>
      <!-- Class col sm  end -->
    </div>
    <!-- Row content end -->
  </div>
  <!-- Container-fluid -->
</div>
<!-- body-container begin -->

<%= render 'layouts/bottom_menu' %>





<!-- Script slideshow artwork -->
<script type="text/javascript">
var slideIndex = 1;
showSlides(slideIndex);

function plusSlides(n) {
  showSlides(slideIndex += n);
}

function currentSlide(n) {
  showSlides(slideIndex = n);
}

function showSlides(n) {
  var i;
  var slides = document.getElementsByClassName("mySlides");
  var dots = document.getElementsByClassName("demo");
  var captionText = document.getElementById("caption");
  if (n > slides.length) {slideIndex = 1}
  if (n < 1) {slideIndex = slides.length}
  for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
  }
  for (i = 0; i < dots.length; i++) {
      dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex-1].style.display = "block";
  dots[slideIndex-1].className += " active";
  captionText.innerHTML = dots[slideIndex-1].alt;
}
</script>
<!-- Script slideshow artwork -->

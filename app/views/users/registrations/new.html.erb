<div class="my_header">
    <li><%= link_to content_tag(:i, nil, class: 'fas fa-bars'), root_path %>
    </li>
    <div class="header_title">Creapolis</div>
    <li>
    </li>
</div>

<div class="connection">

  <!-- formulaire pour s'inscrire -->
  <div class="box-connection-top">

    <div class="form-title">S'inscrire</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f| %>
      <%= devise_error_messages! %>

    <div class="form-pseudo-picture">  
      <div class="field">
        <%= f.text_field :pseudo, autofocus: true, placeholder:"Pseudo",autocomplete: "Pseudo" %>
      </div>

      <div class="field">
        <i class="fas fa-plus-circle fa-2x" id="loadFileXml" value="Votre photo de profil" onclick="document.getElementById('file').click();"> </i>
        <%= f.file_field :profile_picture, placeholder:"Votre photo de profile", style:"display:none;", id:"file" %>

      </div>
      <p> Ajouter une photo de profil</p>
    
    </div>
    <div class="field">
      <%= f.text_field :city, autofocus: true, placeholder:"Ville",autocomplete: "Ville" %>
    </div>

    <br>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder:"Adresse email",autocomplete: "email" %>
    </div>

    <div class="field signup-password">
      <% if @minimum_password_length %>
        <%= f.password_field :password, placeholder:"Mot de passe ( #{@minimum_password_length} caractÃ¨res minimum )", autocomplete: "off" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirmer votre mot de passe" %>
    </div>

    <div class="actions">
      <%= f.submit "S'inscrire" %>
    </div>
    <% end %>
  </div>
  <!-- FIN formulaire pour se connecter -->

  <div class="box-connection-bottom">
        <%= link_to "Se connecter", new_user_session_path %>
  </div>
</div>

<div class="my_header">
    <li> <%= link_to content_tag(:i, nil, class: 'fas fa-chevron-left'), root_path %> </li>
    <%= link_to root_path do %>
      <div class="header_title">
        <div class="header_title_logo"></div>
      </div>
    <% end %>
    <li></li>
</div>


<div class="connection">
<%= devise_error_messages! %>
  <!-- formulaire pour s'inscrire -->
  <div class="box-connection-top">


    <div class="form-title">S'inscrire</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f| %>

      <div class="form-pseudo-picture">
        <div class="field">
          <%= f.text_field :pseudo, autofocus: true, placeholder:"Pseudo*",autocomplete: "Pseudo" %>
        </div>

        <div class="add-picture-artwork">
            <i class="fas fa-plus-circle fa-2x" onclick="document.getElementById('upload').click();"> </i>
            <p onclick="document.getElementById('upload').click();"> Ajoutez votre photo de profil </p>
          
          <%= f.file_field :profile_picture, id:"upload", style:"display:none", onchange:"readURL(this);" %>
          <div class= "center-picture-preview">
            <img id="picture-preview" alt="your image" style="display:none;" />
          </div>
        </div>
      </div>

    <div class="field">
      <%= f.text_field :city, autofocus: true, placeholder:"Ville",autocomplete: "Ville" %>
    </div>

    <br>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder:"Adresse email*",autocomplete: "email" %>
    </div>

    <div class="field signup-password">
      <% if @minimum_password_length %>
        <%= f.password_field :password, placeholder:"Mot de passe* ( #{@minimum_password_length} caractÃ¨res minimum )", autocomplete: "off" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirmer votre mot de passe*" %>
    </div>
    <p> * Champs obligatoires </p>
    <div class="actions">
      <%= f.submit "S'inscrire" %>
    </div>
    <% end %>
  </div>
  <!-- FIN formulaire pour se connecter -->

  <div class="box-connection-bottom">
        <%= link_to "Se connecter", new_user_session_path %>
  </div>
</div>


<script type="text/javascript">
function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    reader.onload = function (e) {
      $('#picture-preview')
        .attr('src', e.target.result)
        .height(30);
    $('#picture-preview').show();
    $(".submit-new-picture-button").show();   
    };
    reader.readAsDataURL(input.files[0]);
  }
  
}

</script>


<div class ="artwork-image-likes">

    <%= link_to cl_image_tag(@artwork.pictures.first.img_url, :secure => true), artwork_path(@artwork) %>

</div>

<div class = "artwork-infos">
      <p><i class="fas fa-user"></i>
        <% if @artwork.artists.exists? %>
          <% @artwork.artists.each { |artist| %>
          <%= artist.pseudo %>
          <% } %>
        <% elsif %>
          <% if !@artwork.artist.nil? %>
          <%= @artwork.artist %>
          <% end %>
        <% elsif %>
          Artiste non indiqué
        <% end %>
      </p>
      <p><i class="fas fa-paint-brush"></i>
        <% if !@artwork.style.nil? %>
          <%= @artwork.style %>
        <% else %>
          Style non indiqué
        <% end %>
      </p>
      <p><i class="fas fa-check-circle"></i>  Visible </i></p>
</div>
